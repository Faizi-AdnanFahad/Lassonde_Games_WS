<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Trans3Cat_8_9"
    android:background="@drawable/light_blue">


    <Button
        android:id="@+id/buttonSpaceMars_10_11"
        android:layout_width="223dp"
        android:layout_height="85dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="79dp"
        android:backgroundTint="#070549"
        android:text="C2) Mars landings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <Button
        android:id="@+id/buttonSpaceMoon_10_11"
        android:layout_width="223dp"
        android:layout_height="85dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="79dp"
        android:backgroundTint="#070549"
        android:text="C1) Artemis Base Camp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <Button
        android:id="@+id/buttonSpaceVenus_10_11"
        android:layout_width="223dp"
        android:layout_height="85dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="384dp"
        android:layout_marginEnd="79dp"
        android:backgroundTint="#070549"
        android:text="C3) An inside look of Venus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="148dp"
        android:background="@color/darkblue"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="393dp"
        android:layout_height="63dp"
        android:background="@drawable/textview_border"
        android:text="Please Choose your Favorite Exhibit:"
        android:textAlignment="center"
        android:textColor="#070549"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>